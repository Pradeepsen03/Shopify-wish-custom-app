<div class="overlay-05-test hidden-05-test"></div>

<div id="wishiy-id-cus" style="display: none;">{{ customer.email }}</div>

<script src="{{ 'wishlist-show.js' | asset_url }}" defer></script>
<style>
.modal-05-test {
  gap: 0.4rem;
  padding: 2.6rem;
  width: 80%;
  min-height: 250px;
  height: 100vh;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -60%) scale(0.9); /* Start slightly above and scaled down */
  opacity: 0; /* Initially hidden */
  z-index: 1000;
  background-color: white;
  border: 1px solid #ddd;
  border-radius: 15px;
  box-shadow: 60px 104px 60px rgba(0, 0, 0, 0.404);
  overflow-y: scroll;
  transition: all 500ms ease-out; /* Smooth opening animation */
}

.modal-05-test:not(.hidden-05-test) {
  opacity: 1;
  transform: translate(-50%, -50%) scale(1); /* Fully visible and centered */
}

.overlay-05-test {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(3px);
  z-index: 999;
  opacity: 0; /* Initially hidden */
  transition: opacity 0.3s ease; /* Smooth fade-in */
}

.overlay-05-test:not(.hidden-05-test) {
  opacity: 1; /* Fully visible */
}

  .btn-close-test-05 {
    position: absolute;
    top: 5%;
    right: 5%;
  }
  .btn-05-test{
    margin-top: 12px;
    cursor: pointer;
    border: none;
  }

  .btn-05-test:hover{
   transform: scale(1.5);
  }

  .hidden-05-test {
    display: none;
  }
  .remove-05-test:hover{
    background-color: red;
    border: none;
    color: white;
    transform: scale(1.5);
  }
</style>

{% schema %}
{
  "name": "Wishlist Show",
  "target": "section",
  "templates": ["product"],
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Add to Wishlist new"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button Background Color",
      "default": "#ff6f61"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "radio",
      "id": "button_alignment",
      "label": "Button Alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    }
  ]
}
{% endschema %}
